doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='../styles/style.css')
    title Verification | Email
    style.

      section.container, footer {
          text-align: center;
      }

      h2 {
        font-size: 24px
      }

      div.content {
        font-size: 18px
      }

      div.link {
          cursor: pointer
      }

      div.link button {
          border: none;
          outline: 1px solid #132A63;
          background-color: #132A63;
          color: #FFFFFF;
          opacity: 0.9;
          border-radius: 5px;
          padding: 5px 20px;
          margin: 20px auto;
          cursor: pointer
      }

      div.link button:hover {
          opacity: 1;
      }

      footer {
        font-size: 12px;
        color: crimson
      }
  body

    section.container

      h2 Reset your password

      div.content
        p Hello #{username}. Kindly click the button below to reset your password.
        p Please do not share this link with anyone.

      div.link
        a(href=url)
          button Reset Password

      div.notify
       p 
        b NOTE: The above link is valid for only 60 minutes.

    footer
      p &copy; 2023. All rights reserved.
